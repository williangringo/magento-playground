<?xml version="1.0"?>
<config>
    <!-- Comments configuration settings -->
    <tabs>
        <inchoo module="inchoo_weblog">
            <label>Inchoo</label>
            <sort_order>10</sort_order>
        </inchoo>
    </tabs>

    <sections>
        <!-- New tab in admin interface -->
        <inchoo_weblog module="inchoo_weblog">
            <label>Weblog</label>
            <tab>inchoo</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>

            <!-- Comments configuration settings-->
            <groups>
                <settings>
                    <label>InchooWebLog Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <enable_comments>
                            <label>Enable comments</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                        </enable_comments>
                    </fields>
                </settings>
            </groups>
        </inchoo_weblog>
    </sections>
</config>